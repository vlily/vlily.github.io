/**app.wxss**/
/* page{height:100%} */
view,text,image{padding: 0;margin: 0;}  
.container {width: 100%;overflow-x: hidden; height: 100%;display: flex;flex-direction: column;align-items: center; justify-content: space-between;box-sizing: border-box;}
.content{width: 100%;height: 100%;margin-top:0;}
text,button{font-family: "微软雅黑";font-size: 24rpx;display: block;}
.h1,.h2,.h3,.h4,.h5,.h6{display: block;font-weight: bolder;}
.h1{font-size: 70rpx;} 
.h2{font-size: 55rpx;}
.h3{font-size: 50rpx;}
.h4{font-size: 45rpx;}
.h5{font-size: 40rpx;}
.h6{font-size: 30rpx;}
/* 超出一行显示省略号 */
.text-overflow{overflow:hidden; text-overflow:ellipsis;display:-webkit-box; -webkit-box-orient:vertical;-webkit-line-clamp:1; }
.margin_top{margin-top: 16rpx;}
.modengjiColor {color: #87acb8!important;font-weight: 900;}
/* 清除浮动 */
.clear { zoom:1; }
.clear:after { content:''; display:block; clear:both; }
view,text{font-size: 28rpx;letter-spacing: 2rpx;}
/* 淡入 */
.topacity{animation: topacity 0.5s ease 0s 1 both;}
@keyframes topacity{
	0%{
		opacity:0;
		filter: alpha(opacity=0);
	}
	100%{
		opacity:1;
    filter: alpha(opacity=1);
	}
}
