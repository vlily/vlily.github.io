/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.blueToothData{font-size: 32rpx;color: #ccc;margin: 10rpx;}
.getData{font-size:34rpx;color: rgb(150, 201, 214);display: inline-block;margin-left: 20rpx;vertical-align: top;}
.usermotto {
  margin-top: 200px;
}
.bluetooth{color: red;background: #eee;padding: 20rpx;border: 1px solid #ccc;cursor: pointer;}
.red{
  color: red;
}
/* 蓝牙ui */
.content{background: rgb(230, 230, 230);}
.header{font-size: 30rpx;}
.right{float: right}
/* switch样式 */
.wx-switch-input{width:42px !important;height:20px !important;}
.wx-switch-input::before{width:41px !important;height: 20px !important;}
/* 中间小圆球 */
.wx-switch-input::after{width: 18px !important;height: 18px !important;}
.header_item{background: #fff;width: 100%;margin: 0 auto;}
.header_item_text{margin: 0 40rpx;padding:20rpx 0;border-bottom: 1rpx solid #EEE;}
.visited:visited{color: #aaa;} 
.section_title{font-size:24rpx;margin: 10rpx 40rpx;}
.scrolll_devices{height: 300rpx;box-shadow: 2rpx 2rpx 5rpx #fff;}
.status_deviceId{font-size:24rpx;color:#aaa; }
.status_selected{color: rgb(150, 201, 214)}
.order_input{border: 1px solid rgb(150, 201, 214);display: inline-block;margin-right: 20rpx;}
.order_getVal{margin: 10rpx 0 10rpx 20rpx;}